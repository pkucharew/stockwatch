{
  "extends": [
    "eslint:recommended", // less opinionated
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": [],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": "detect"
  }
}
